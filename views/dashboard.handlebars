<section>
    <h2>Add new post</h2>
    
    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title"/>
        </div>
        <div>
            <label for="post-text">Content</label>
            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Add</button>
    </form>
</section>
{{#if posts.length}}
<section >
    <h2>Your Posts</h2>
    <ul>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/js/add-post.js"></script>